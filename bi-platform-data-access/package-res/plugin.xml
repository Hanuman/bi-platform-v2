<?xml version="1.0" encoding="UTF-8"?>

<plugin title="Pentaho Data Access">
   <static-paths>
     <!-- this translates to /pentaho/content/data-access-plugin/resources/* -->
     <static-path url="/data-access/resources" localFolder="resources"/>
   </static-paths>
   
   <bean id="connectionService" class="org.pentaho.platform.dataaccess.datasource.wizard.service.gwt.ConnectionServiceBeanImpl" />
   <bean id="datasourceService" class="org.pentaho.platform.dataaccess.datasource.wizard.service.gwt.DatasourceServiceBeanImpl"/>
   
  <webservice
    title="%ConnectionService.TITLE%" 
    description="%ConnectionService.DESC%"
    ref="connectionService">
  </webservice>
</plugin>
