<?xml version="1.0" encoding="UTF-8"?>
<ivy-module version="2.0" xmlns:m="http://ant.apache.org/ivy/maven">
    <info organisation="${ivy.artifact.group}" module="${ivy.artifact.id}" revision="${project.revision}" />
    
    <configurations>
    	<conf name="default"/>
    	<conf name="runtime"/>
      <conf name="test"          visibility="private"/>
    	<conf name="codegen"       visibility="private"/>
    	<conf name="codegen-mac"   visibility="private" extends="codegen"/>
    	<conf name="codegen-win"   visibility="private" extends="codegen"/>
    	<conf name="codegen-linux" visibility="private" extends="codegen"/>
    </configurations>
    
    <publications>
    	<artifact name="${ivy.artifact.id}" type="jar"/>
    </publications>
    
    <dependencies defaultconf="default->default">
        <!--  Actual dependencies -->
        <dependency org="commons-logging"       name="commons-logging"    rev="1.1"   transitive="false"/>
        <dependency org="commons-httpclient"    name="commons-httpclient" rev="3.0.1" transitive="false"/>
        <dependency org="commons-codec"         name="commons-codec"      rev="1.3"/>
        <dependency org="org.zenica"            name="gwt-datepicker"     rev="r17"   conf="default->default"/>
        <dependency org="com.google.gwt"        name="gwt-servlet"        rev="1.5.2" conf="default->default"/>

		    <!--  Pentaho dependencies -->
    	<dependency org="pentaho" name="pentaho-xul-core" 					 rev="${dependency.pentaho-xul-core.revision}" changing="true" />
        
        <dependency org="${ivy.artifact.group}" name="pentaho-bi-platform-api"             rev="${project.revision}" conf="default->default" changing="true">
          <artifact name="pentaho-bi-platform-api"/>
          <artifact name="pentaho-bi-platform-api" type="source" ext="jar" m:classifier="sources"/>
        </dependency>
        
        <dependency org="${ivy.artifact.group}" name="pentaho-bi-platform-repository"      rev="${project.revision}" conf="default->default" changing="true" />
        <dependency org="${ivy.artifact.group}" name="pentaho-bi-platform-plugin-actions"  rev="${project.revision}" conf="default->default" changing="true" />
        <dependency org="${ivy.artifact.group}" name="pentaho-bi-platform-web"             rev="${project.revision}" conf="default->default" changing="true" />
        
        <dependency org="pentaho" name="pentaho-gwt-widgets"                 rev="${dependency.pentaho-gwt-widgets.revision}" conf="default->default" changing="true" />

        <dependency org="${ivy.artifact.group}" name="pentaho-reporting-engine-classic" rev="0.8.9.8-ext" conf="default->default"/>

        <!--  Testing dependencies -->
        <dependency org="junit"          name="junit"          rev="4.4" conf="test->default"/>

        <!--  Codegen dependencies -->
        <dependency org="com.google.gwt" name="gwt-user" rev="1.5.2"                         conf="codegen->default"/>
        <dependency org="com.google.gwt" name="gwt-dev"  rev="1.5.2" m:classifier="mac"      conf="codegen-mac->default"/>
        <dependency org="com.google.gwt" name="gwt-dev"  rev="1.5.2" m:classifier="windows"  conf="codegen-win->default"/>
        <dependency org="com.google.gwt" name="gwt-dev"  rev="1.5.2" m:classifier="linux"    conf="codegen-linux->default"/>
    </dependencies>
</ivy-module>
