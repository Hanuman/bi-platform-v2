<?xml version="1.0" encoding="UTF-8"?>
<ivy-module version="2.0">

    <info organisation="${ivy.artifact.group}" module="pentaho-bi-platform-appserver" revision="${project.revision}"/>
    
    <configurations>
    	<conf name="default"/>
    	<conf name="test" visibility="private"/>
    </configurations>
    
    <dependencies defaultconf="default->default">
        <!--  external dependencies -->
        <dependency org="org.jboss/portal"  name="portal-server-lib"	        rev="2.6.1"/>        
        <dependency org="org.jboss/portal"  name="portal-theme-lib"	        rev="2.6.1"/>        
        <dependency org="org.springframework.security"   name="spring-security-core"      rev="2.0.5.RELEASE" transitive="false"/>
        <dependency org="commons-lang"        name="commons-lang"        rev="2.2"/>
        <dependency org="org.hibernate" name="hibernate" rev="3.2.6.ga">
	      <!--
	        include these jars, needed for unit tests. child projects may choose to exclude these, if deploying to an app
	        server, etc. <exclude org="net.sf.ehcache" name="ehcache" /> <exclude org="asm" name="asm" /> <exclude org="asm"
	        name="asm-attrs" />
	      -->
          <exclude org="commons-logging" name="commons-logging" />
          <exclude org="commons-collections" />
          <exclude org="dom4j" name="dom4j" />
          <exclude org="net.sf.ehcache" name="ehcache" />
        </dependency>
        <dependency org="com.tonbeller" name="jpivot" rev="1.8.0-091218">
          <artifact name="jpivot" type="jar" />
        </dependency>
		<dependency org="quartz"			name="quartz"              rev="1.5.2">
			<exclude org="commons-logging" name="commons-logging" />
		</dependency>
		<dependency org="javax.servlet"		  name="servlet-api"         rev="2.4"/>
        <dependency org="org.springframework" name="spring" rev="2.5.6" transitive="false"/>
        <dependency org="dom4j"              name="dom4j"              rev="1.6.1">
			<exclude org="xml-apis" name="xml-apis" />
		</dependency>
	
        <!--  internal dependencies -->
        <dependency org="pentaho" name="pentaho-connections"                 rev="${dependency.pentaho-connections.revision}" changing="true"/>
        
        <dependency org="${ivy.artifact.group}" name="pentaho-bi-platform-api"             rev="${project.revision}" changing="true"/>    
        <dependency org="${ivy.artifact.group}" name="pentaho-bi-platform-util"            rev="${project.revision}" changing="true"/>
        <dependency org="${ivy.artifact.group}" name="pentaho-bi-platform-engine-core"     rev="${project.revision}" changing="true"/>
        <dependency org="${ivy.artifact.group}" name="pentaho-bi-platform-engine-security" rev="${project.revision}" changing="true"/>        
        <dependency org="${ivy.artifact.group}" name="pentaho-bi-platform-engine-services" rev="${project.revision}" changing="true"/>
        <dependency org="${ivy.artifact.group}" name="pentaho-bi-platform-repository"      rev="${project.revision}" changing="true"/>        
        <dependency org="${ivy.artifact.group}" name="pentaho-bi-platform-plugin-services" rev="${project.revision}" changing="true"/>        
        <dependency org="${ivy.artifact.group}" name="pentaho-bi-platform-ui-foundation"   rev="${project.revision}" changing="true"/>        
        <dependency org="${ivy.artifact.group}" name="pentaho-bi-platform-scheduler"       rev="${project.revision}" changing="true"/>
        <dependency org="${ivy.artifact.group}" name="pentaho-bi-platform-web"             rev="${project.revision}" changing="true"/>
        <dependency org="${ivy.artifact.group}" name="pentaho-bi-platform-web-servlet"     rev="${project.revision}" changing="true"/>
        
        <conflict org="commons-beanutils" rev="1.8.0" />
    </dependencies>
    
</ivy-module>
